<section>
    <form id="edit-post-form">
        <div>
            <input type="text" name="post-title" id="post-title" value="{{post.title}}">
        </div>
        <div>
            <input name="post-body" id="post-body" value="{{post.content}}">
        </div>
        <div>
            <button type="submit">Save</button>
            <button id="delBtn">Delete</button>
        </div>
    </form>
</section>
<section>
    <form id="add-comment-form">
        <div>
            <textarea name="comment-body" id="comment-body"></textarea>
            <button type="submit">Comment!</button>
        </div>
    </form>
    <div>
        <span>
            {{post.comments.length}} {{format_plural "comment" post.comments.length}}
        </span>
        {{> comments post.comments}}
    </div>
</section>

<script src="/js/edit-delete-post.js"></script>
<script src="/js/add-comment.js"></script>